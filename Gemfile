source 'http://rubygems.org'

# The Google drive gem to interface with Google Drive APIs (note: this has a huge list of dependencies).
gem 'google_drive'

# The weather API gem to interface with Yahoo! weather.
gem 'weather-api'

# Rspec for tests.
gem 'rspec'
gem 'guard'
gem 'guard-rspec'
gem 'rb-fsevent'